{
  "manifest_version": 2,
  "name": "Test Scenario Recorder",
  "version": "1.0",
  "description": "Records user interactions for test automation",
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/",
    "<all_urls>"
  ],
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}